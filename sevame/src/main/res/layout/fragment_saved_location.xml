<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@drawable/white_rounded_button"
              android:layout_margin="5dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:id="@+id/location_name" android:textStyle="bold" android:textColor="@drawable/green_text"
            android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingBottom="10dp"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="x"
            android:id="@+id/delete_button" android:background="#00000000"/>
</LinearLayout>